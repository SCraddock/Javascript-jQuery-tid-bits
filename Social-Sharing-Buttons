// ONCLICK SOCIAL SHARING BUTTONS 
// remember to set your og meta stuff 



// if click facebook share -> get url -> share it stuff
  $('.fbsharelink').click( function(){
      var shareurl = window.location;
      window.open('https://www.facebook.com/sharer/sharer.php?u='+escape(shareurl)+'&t='+document.title, '',
      'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=300,width=600');
      return false;
  });
  // end facebook button

  // twitter social sharing button
  var twitterHandle = 'orbital_agency';
  $('.twsharelink').click( function(){
    window.open('https://twitter.com/share?url='+escape(window.location.href)+'&text='+document.title + ' via @' + twitterHandle, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=300,width=600');
    return false;
  });
  // end twitter button

  // Google+ social share button
  $('.gpsharelink').click( function(){
    window.open("https://plus.google.com/share?url="+escape(window.location.href),"","height=550,width=525,left=100,top=100,menubar=0");
    return false;
  });
  // end google+ button
  
  
